# Environment Configuration for KrushiMitra
# Copy this file to .env and fill in your values

# ============================================
# DEPLOYMENT MODE
# ============================================
# Options: development, production, hybrid
# - development: Local servers only (Ollama + local backend)
# - production: Cloud services only (most reliable)
# - hybrid: Try local first, fallback to cloud (recommended)
EXPO_PUBLIC_ENVIRONMENT=hybrid

# ============================================
# LLM CONFIGURATION
# ============================================
# LLM Mode: cloud, local, or hybrid
EXPO_PUBLIC_LLM_MODE=hybrid

# Cloud LLM Provider (groq, openrouter, or together)
EXPO_PUBLIC_CLOUD_LLM_PROVIDER=groq

# Cloud LLM API Key
# Get free key from:
# - Groq: https://console.groq.com/keys (RECOMMENDED - Fast & Free)
# - OpenRouter: https://openrouter.ai/keys
# - Together: https://api.together.xyz/settings/api-keys
EXPO_PUBLIC_GROQ_API_KEY=your_groq_api_key_here
EXPO_PUBLIC_CLOUD_LLM_API_KEY=your_api_key_here

# Model name (leave empty to use default)
EXPO_PUBLIC_CLOUD_LLM_MODEL=

# ============================================
# BACKEND CONFIGURATION
# ============================================
# Backend API URL (for TTS and database)
# For desktop development: http://localhost:3001
# For mobile testing: http://YOUR_IP:3001 (e.g., http://192.168.1.100:3001)
# For production: https://your-backend.com
# Run './mobile-setup.ps1' to auto-configure for mobile
EXPO_PUBLIC_BACKEND_URL=http://localhost:3001

# ============================================
# LOCAL SERVER CONFIGURATION (Optional)
# ============================================
# Ollama Server URL
# For desktop: http://localhost:11434
# For mobile: http://YOUR_IP:11434 (e.g., http://192.168.1.100:11434)
# Run './mobile-setup.ps1' to auto-configure for mobile
EXPO_PUBLIC_OLLAMA_SERVER=http://localhost:11434

# These are auto-discovered but can be manually set if needed
EXPO_PUBLIC_OLLAMA_SERVER_IP=
EXPO_PUBLIC_OLLAMA_PORT=11434

# ============================================
# TTS CONFIGURATION
# ============================================
# ElevenLabs API Key (for cloud TTS)
EXPO_PUBLIC_ELEVENLABS_API_KEY=your_elevenlabs_key_here

# ============================================
# FIREBASE CONFIGURATION
# ============================================
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# ============================================
# GEMINI API (Optional - if using Gemini instead of cloud LLM)
# ============================================
EXPO_PUBLIC_GEMINI_API_KEY=your_gemini_api_key
